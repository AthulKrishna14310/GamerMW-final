<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LuckyWheel">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:id="@+id/wheelProgress"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/giveaway_wheel"
        android:layout_margin="16dp"
        android:id="@+id/title"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        />
    <com.adefruandta.spinningwheel.SpinningWheelView
        android:id="@+id/wheel"
        android:layout_width="272dp"
        android:layout_height="272dp"
        android:layout_centerInParent="true"
        app:wheel_arrow_color="@color/dark_bg"
        app:wheel_colors="@array/rainbow_dash"
        app:wheel_stroke_color="@color/colorPrimary"
        app:wheel_stroke_width="4dp"
        app:wheel_text_size="0sp"
        android:textAlignment="center"

        />
</RelativeLayout>